{
	"$schema":     "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
	"hint.enable": false,
	"workspace": {
		"useGitIgnore": true,
		"ignoreDir": [
			"config/wireshark",
			"config/mpv"
		]
	},
    "diagnostics.severity": {
      "redefined-local": "Warning",
      "missing-fields": "Hint"
    },
  "diagnostics": {
    "disable": [
    ],
     "globals": [
      "ya",
                    "vim",
                    "describe",
                    "it",
                    "before_each",
                    "after_each",
                    "pending",
                    "teardown"

     ]
   }
}

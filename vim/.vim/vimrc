" hope this can be removed if wincmd_result
function! WinCmdWithRes(toto)
	let l:res = bufnr('%')
	"echo l:res
	exec "wincmd ".a:toto
	"echo bufnr('%') == res
	let g:wincmd_result= bufnr('%') != l:res
endfunction




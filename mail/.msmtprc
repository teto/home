# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Gmail
account        gmail
host           smtp.gmail.com
port           587
from           mattator@gmail.com
user           mattator
# passwordeval to launch an external program.
# password       plain-text-password
passwordeval	"keyring get gmail mattator"

# Set a default account
account default : gmail

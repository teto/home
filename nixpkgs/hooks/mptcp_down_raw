# A script for setting up routing tables for MPTCP in the N950.

# Copy this script into /etc/network/if-post-down.d/

set -ex

# env > /tmp/if_down_env

if [ "$IFACE" = lo -o "$MODE" != stop ]; then
        exit 0
fi

IP=${IP:-ip}

$IP rule del table $DEVICE_IFACE
$IP route flush table $DEVICE_IFACE 


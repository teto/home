{
  "$schema": "/home/teto/.config/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "top",
  "cssPriority": "application",
  "control-center-margin-top": 0,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 0,
  "control-center-margin-left": 0,
  "notification-icon-size": 64,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 6,
  "fit-to-screen": true,
  "control-center-width": 500,
  "control-center-height": 600,
  "notification-window-width": 500,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "scripts": {
    "example-action-script": {
      "exec": "bash -c 'wl-copy \"$SWAYNC_BODY\"'",
      "run-on": "action"
    }
  },
  "widgets": [
    "buttons-grid",
    "menubar#label",
    "backlight",
    "mpris",
    "volume",
    "inhibitors",
    "title",
    "dnd",
    "notifications"
  ],
  "widget-config": {
    "buttons-grid": {
      "actions": [
       {
        "label": "VPN",
        "type": "toggle",
        "active": true,
        "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && nmcli radio wifi on || nmcli radio wifi off'",
        "update-command": "sh -c '[[ $(nmcli radio wifi) == \"enabled\" ]] && echo true || echo false'"
      },
       {
        "label": "Wifi",
        "type": "toggle",
        "active": true,
        "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && nmcli radio wifi on || nmcli radio wifi off'",
        "update-command": "sh -c '[[ $(nmcli radio wifi) == \"enabled\" ]] && echo true || echo false'"
      },
      {
          "label": "直",
          "command": "~/.config/rofi/rofi-wifi-menu.sh"
        },
        {
          "label": "Dent bleue",
          "command": "~/.config/rofi/rofi-bluetooth"
        },
        {
          "label": "",
          "command": "notify-send -m 'toto'",
          "type": "toggle"
        },
        {
          "label": "",
          "command": "wlogout"
        }
      ]
    },
    "volume": {
      "label": ""
    },
    "menubar#label": {
      "menu#power-buttons": {
        "label": "Machine state",
        "position": "right",
        "actions": [
          {
            "label": " Reboot",
            "command": "systemctl reboot"
          },
          {
            "label": " Lock",
            "command": "swaylock -f --image ~/.config/wallpapers/snow_woods.jpg"
          },
          {
            "label": " Logout",
            "command": "swaymsg exit"
          },
          {
            "label": " Shut down",
            "command": "systemctl poweroff"
          }
        ]
      },
      "menu#powermode-buttons": {
        "label": "Power-profiles",
        "position": "left",
        "actions": [
          {
            "label": "Performance",
            "command": "powerprofilesctl set performance"
          },
          {
            "label": "Balanced",
            "command": "powerprofilesctl set balanced"
          },
          {
            "label": "Power-saver",
            "command": "powerprofilesctl set power-saver"
          }
        ]
      },
      "buttons#topbar-buttons": {
        "position": "left",
        "actions": [
          {
            "label": "Screenshot",
            "command": "grim"
          }
        ]
      }
    },
    "backlight": {
      "label": "Brightness",
      "device": "intel_backlight",
      "subsystem": "backlight",
      "min": 10
    },
    "inhibitors": {
      "text": "Inhibitors",
      "button-text": "Clear All Notifs",
      "clear-all-button": true
    },
    "dnd": {
      "text": "Mute notifications"
    },
    "label": {
      "max-lines": 5,
      "text": "Label Text"
    },
    "mpris": {
      "image-size": 96,
      "image-radius": 12
    }
  }
}

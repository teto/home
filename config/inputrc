# https://wiki.archlinux.org/index.php/readline
set editing-mode vi
$include /etc/inputrc

# history-search-backward
set keymap vi-command

# these are for vi-command mode

Control-l: clear-screen
set keymap vi-insert
# these are for vi-insert mode
Control-l: clear-screen
Control-p: previous-history
Control-n: next-history
Control-a: beginning-of-line
Control-e: end-of-line



# to enable case-insensitive tab completion
set completion-ignore-case On

# The double tab can be changed to a single tab by setting
set show-all-if-unmodified on

# partially complete the word and show all possible completions if it is still ambiguous
set show-all-if-ambiguous on

# Mark symlinked directories
set mark-symlinked-directories On
# Color the common prefix
# set colored-completion-prefix On
# Color the common prefix in menu-complete
# set menu-complete-display-prefix On
# set echo-control-characters off
# use per filetype completion colors 
set colored-stats On

# defaults to off
set enable-bracketed-paste On
set enable-keypad On

set horizontal-scroll-mode Off
set show-mode-in-prompt On
# set vi-ins-mode-string

# Ctrl X + Ctrl E opens vim with cmd
# edit-and-execute-command
# set keymap vi

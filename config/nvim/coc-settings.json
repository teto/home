{
	"diagnostic.enable": true,
  	"diagnostic.errorSign": ">>",
//	"diagnostic.warningSign": "⚠",
//	"diagnostic.infoSign": ">>",
//	"diagnostic.hintSign": ">>",
	// "python.jediEnabled": false,
	// "git.enableGutters": false,
	// "git.addGlameToVirtualText": false,
	//"git.changeRemovedSign.hlGroup": ,
	// enable completion from github #
	// "coc.source.issues.enable": false,
//	"python.linting.pep8Enabled": true,
//	"python.linting.mypyEnabled": true,
	"coc.preferences.snippets.enable": false,
	"coc.source.vimtex.disableSyntaxes": true,
	"coc.source.vimtex.enable": false,
	"translator.toLang": "fr",
	// "bing", "ciba",
	"translator.engines": [ "google"],
	"coc.preferences.extensionUpdateCheck": "never",
	// history size
	"translator.maxsize": 5000, 
	"coc.source.around.enable": true,
	// use https://github.com/neoclide/coc.nvim/wiki/Completion-with-sources#improve-completion-experience
	"coc.source.around.shortcut": "around",
	"coc.source.buffer.shortcut": "buf",
	"suggest.snippetIndicator": "►",
	"suggest.noselect": false,
	"languageserver": {
		"bash": {
		"command": "bash-language-server",
		"args": ["start"],
		"filetypes": ["sh"],
		"ignoredRootPaths": ["~"]
		},
		"haskell": {
			"command": "hie-wrapper",
			"args": ["--lsp", "-d", "--vomit", "--logfile", "/tmp/lsp_haskell.log"],
			"rootPatterns": [".stack.yaml", "cabal.config", "package.yaml"],
			"filetypes": ["hs", "lhs", "haskell"],
			"trace.server": "verbose",
			"initializationOptions": {},
			"settings": {
				"languageServerHaskell": {
					"hlintOn": false,
					"maxNumberOfProblems": 10,
					"completionSnippetsOn": true,
					"liquidOn": false
					// "formatOnImportOn"
					// "formattingProvider":
				}
			}
		},
		"latex": {
			"command": "digestif",
			"filetypes": ["latex"]
		},
		"lua": {
			"command": "lua-lsp",
			"filetypes": ["lua"]
		},
		"python": {
             "command": "python",
			 "args": [ "-mpyls", "-vv", "--log-file" , "/tmp/lsp_python.log"],
			 "trace.server": "verbose",
			 "filetypes": ["python"],
			 "settings": {
				"pyls": {
					"enable": true,
					"trace": {
						"server": "verbose"
					},
					"commandPath": "",
					"configurationSources": [
						"pycodestyle"
					],
					"plugins": {
						"jedi_completion": {
							"enabled": true
						},
						"jedi_hover": {
							"enabled": true
						},
						"jedi_references": {
							"enabled": true
						},
						"jedi_signature_help": {
							"enabled": true
						},
						"jedi_symbols": {
							"enabled": true,
							"all_scopes": true
						},
						"mccabe": {
							"enabled": true,
							"threshold": 15
						},
						"preload": {
							"enabled": true
						},
						"pycodestyle": {
							"enabled": true
						},
						"pylint": {
							"enabled": false
						},
						"pydocstyle": {
							"enabled": false,
							"match": "(?!test_).*\\.py",
							"matchDir": "[^\\.].*"
						},
						"pyflakes": {
							"enabled": false
						},
						"rope_completion": {
							"enabled": true
						},
						"yapf": {
							"enabled": true
						}
					}
				}
			}
		},
		"cquery": {
			"command": "cquery",
			"args": ["--log-file=/tmp/cq.log"],
			"filetypes": ["c"],
			"trace.server": "verbose",
			"rootPatterns": ["compile_flags.txt", "compile_commands.json"],
			"initializationOptions": {
			"cacheDirectory": "/tmp/cquery"
			}
		}
  },
}
